{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://libspec.dev/schema/1.0/extensions/observability.schema.json",
  "title": "Observability Extension",
  "description": "Extension for debugging and monitoring: logging, metrics, tracing, health checks.",

  "$defs": {
    "ObservabilityLibraryFields": {
      "description": "Fields added to Library when observability extension is active",
      "type": "object",
      "properties": {
        "logging": {
          "$ref": "#/$defs/LoggingSpec"
        },
        "metrics": {
          "type": "array",
          "description": "Metrics exposed by the library",
          "items": { "$ref": "#/$defs/MetricSpec" }
        },
        "tracing": {
          "$ref": "#/$defs/TracingSpec"
        },
        "health_checks": {
          "type": "array",
          "description": "Health check endpoints",
          "items": { "$ref": "#/$defs/HealthCheckSpec" }
        },
        "debug_tools": {
          "$ref": "#/$defs/DebugToolsSpec"
        }
      }
    },

    "LoggingSpec": {
      "type": "object",
      "description": "Logging configuration",
      "properties": {
        "logger_name": {
          "type": "string",
          "description": "Logger name (e.g., 'mylib')"
        },
        "levels_used": {
          "type": "array",
          "description": "Log levels used",
          "items": {
            "type": "string",
            "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
          }
        },
        "structured": {
          "type": "boolean",
          "description": "Whether structured logging is used"
        },
        "context_fields": {
          "type": "array",
          "description": "Context fields included in log entries",
          "items": { "type": "string" }
        },
        "sensitive_fields": {
          "type": "array",
          "description": "Fields that are masked in logs",
          "items": { "type": "string" }
        },
        "rate_limiting": {
          "type": "boolean",
          "description": "Whether log rate limiting is supported"
        },
        "sampling": {
          "type": "boolean",
          "description": "Whether log sampling is supported"
        }
      }
    },

    "MetricSpec": {
      "type": "object",
      "description": "A metric exposed by the library",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Metric name (e.g., 'mylib_requests_total')"
        },
        "type": {
          "type": "string",
          "description": "Metric type",
          "enum": ["counter", "gauge", "histogram", "summary", "info"]
        },
        "description": {
          "type": "string",
          "description": "What this metric measures"
        },
        "labels": {
          "type": "array",
          "description": "Label names for this metric",
          "items": { "type": "string" }
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement (e.g., 'seconds', 'bytes')"
        },
        "buckets": {
          "type": "array",
          "description": "Histogram buckets (for histogram type)",
          "items": { "type": "number" }
        }
      }
    },

    "TracingSpec": {
      "type": "object",
      "description": "Distributed tracing configuration",
      "properties": {
        "span_names": {
          "type": "array",
          "description": "Span names used",
          "items": { "type": "string" }
        },
        "propagation": {
          "type": "string",
          "description": "Context propagation format",
          "enum": ["w3c", "b3", "jaeger", "xray", "datadog", "custom"]
        },
        "sampling": {
          "type": "string",
          "description": "Sampling strategy",
          "enum": ["always", "never", "probabilistic", "rate_limited", "parent_based"]
        },
        "sampling_rate": {
          "type": "number",
          "description": "Sampling rate (0.0-1.0)",
          "minimum": 0,
          "maximum": 1
        },
        "attributes": {
          "type": "array",
          "description": "Standard span attributes",
          "items": { "type": "string" }
        },
        "events": {
          "type": "array",
          "description": "Span events emitted",
          "items": { "type": "string" }
        },
        "baggage": {
          "type": "array",
          "description": "Baggage items propagated",
          "items": { "type": "string" }
        }
      }
    },

    "HealthCheckSpec": {
      "type": "object",
      "description": "A health check endpoint",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Health check name"
        },
        "type": {
          "type": "string",
          "description": "Health check type",
          "enum": ["liveness", "readiness", "startup"]
        },
        "endpoint": {
          "type": "string",
          "description": "HTTP endpoint path"
        },
        "method": {
          "type": "string",
          "description": "Method to call for health check"
        },
        "timeout": {
          "type": "number",
          "description": "Timeout in seconds"
        },
        "interval": {
          "type": "number",
          "description": "Check interval in seconds"
        },
        "dependencies": {
          "type": "array",
          "description": "Dependencies checked",
          "items": { "type": "string" }
        }
      }
    },

    "DebugToolsSpec": {
      "type": "object",
      "description": "Debugging tool configuration",
      "properties": {
        "repr_depth": {
          "type": "integer",
          "description": "Default __repr__ recursion depth",
          "minimum": 1
        },
        "sensitive_fields": {
          "type": "array",
          "description": "Fields redacted in debug output",
          "items": { "type": "string" }
        },
        "trace_format": {
          "type": "string",
          "description": "Trace output format",
          "enum": ["json", "text", "compact", "pretty"]
        },
        "profiling_supported": {
          "type": "boolean",
          "description": "Whether profiling hooks are available"
        },
        "memory_tracking": {
          "type": "boolean",
          "description": "Whether memory tracking is available"
        },
        "async_debug": {
          "type": "boolean",
          "description": "Whether async debugging tools are available"
        }
      }
    }
  }
}

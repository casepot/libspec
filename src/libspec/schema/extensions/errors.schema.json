        "type": {
          "description": "Exception class name",
          "minLength": 1,
          "title": "Type",
          "type": "string"
        },
        "user_facing": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ],
          "default": null,

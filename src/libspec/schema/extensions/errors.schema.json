          "title": "Description"
        },
        "type": {
          "description": "Exception class name",
          "minLength": 1,
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "title": "ErrorHierarchyNode",
      "type": "object"
    },
    "ErrorsLibraryFields": {

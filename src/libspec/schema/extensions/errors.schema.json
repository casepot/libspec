          "default": null,
          "description": "Base class (e.g., 'Exception', 'RuntimeError')",
          "title": "Base"
        },
        "children": {
          "anyOf": [
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "type": "null"
            }

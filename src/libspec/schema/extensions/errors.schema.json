        "category": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Error category for grouping",
          "title": "Category"
        },
        "code": {
          "description": "Error code (e.g., 'E001', 'AUTH_FAILED')",
          "title": "Code",
          "type": "string"
        },
        "description": {
          "description": "Human-readable description",
          "title": "Description",
          "type": "string"
        },
        "docs_url": {
          "anyOf": [
            {
              "format": "uri",
              "minLength": 1,
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "URL to detailed documentation",
          "title": "Docs Url"
        },
        "severity": {
          "anyOf": [
            {
              "$ref": "#/$defs/Severity"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Error severity level"
        },
        "type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Associated exception type",
          "title": "Type"
        }
      },
      "required": [
        "code",
        "description"
      ],
      "title": "ErrorCode",
      "type": "object"
    },
    "ErrorHierarchyNode": {

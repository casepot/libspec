          "title": "Description"
        },
        "error_code": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Associated error code (if any)",
          "title": "Error Code"
        },
        "fields": {
          "anyOf": [
            {
              "items": {
                "$ref": "#/$defs/ExceptionField"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Exception attributes",
          "title": "Fields"
        },
        "module": {
          "description": "Module where exception is defined",
          "minLength": 1,
          "title": "Module",
          "type": "string"
        },
        "raised_by": {
          "anyOf": [
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Functions/methods that raise this exception",
          "title": "Raised By"
        },
        "recovery": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Recommended recovery strategy",
          "title": "Recovery"
        },
        "retryable": {
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Whether the operation can be retried",
          "title": "Retryable"

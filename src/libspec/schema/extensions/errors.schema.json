        "error_codes": {
          "anyOf": [
            {
              "items": {
                "$ref": "#/$defs/ErrorCode"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Enumerated error codes",
          "title": "Error Codes"
        },
        "error_hierarchy": {
          "anyOf": [
            {
              "items": {
                "$ref": "#/$defs/ErrorHierarchyNode"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Exception class hierarchy",
          "title": "Error Hierarchy"
        },
        "exceptions": {
          "anyOf": [
            {
              "items": {
                "$ref": "#/$defs/ExceptionSpec"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Detailed exception specifications",
          "title": "Exceptions"
        }
      },
      "title": "ErrorsLibraryFields",
      "type": "object"
    },
    "ExceptionField": {
      "properties": {
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
